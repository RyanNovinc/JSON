const calculateMealPlanStats = (mealPlan: any) => {
  let totalMeals = 0;
  let totalDays = 0;
  let uniqueMeals = 0;

  if (mealPlan.weeks) {
    const uniqueMealNames = new Set();
    
    mealPlan.weeks.forEach((week: any) => {
      if (week.days) {
        totalDays += week.days.length;
        week.days.forEach((day: any) => {
          if (day.meals) {
            totalMeals += day.meals.length;
            day.meals.forEach((meal: any) => {
              if (meal.meal_name) {
                uniqueMealNames.add(meal.meal_name);
              }
            });
          }
        });
      }
    });
    
    uniqueMeals = uniqueMealNames.size;
  }

  return { totalDays, totalMeals, uniqueMeals };
};

// Calculate meal plan metrics for the info bars
const calculateMealPlanMetrics = (stats: any) => {
  const { totalDays, totalMeals, uniqueMeals } = stats;
  
  // Variety calculation: percentage of unique meals vs total meals
  const variety = totalMeals > 0 ? Math.round((uniqueMeals / totalMeals) * 100) : 0;
  
  // Cooking frequency: based on unique meals per day
  const uniqueMealsPerDay = uniqueMeals / totalDays;
  let cookingFrequency = 0;
  if (uniqueMealsPerDay >= 2.5) cookingFrequency = 90; // Daily cooking
  else if (uniqueMealsPerDay >= 2) cookingFrequency = 70;
  else if (uniqueMealsPerDay >= 1.5) cookingFrequency = 50;
  else if (uniqueMealsPerDay >= 1) cookingFrequency = 30;
  else cookingFrequency = 10; // Meal prep friendly
  
  // Shopping complexity: based on unique meals
  let shoppingComplexity = 0;
  if (uniqueMeals >= 40) shoppingComplexity = 95;
  else if (uniqueMeals >= 30) shoppingComplexity = 80;
  else if (uniqueMeals >= 20) shoppingComplexity = 60;
  else if (uniqueMeals >= 10) shoppingComplexity = 40;
  else shoppingComplexity = 20;
  
  // Prep time: based on variety and cooking frequency
  const prepTime = Math.round((cookingFrequency + shoppingComplexity) / 2);
  
  return {
    variety,
    cookingFrequency,
    shoppingComplexity,
    prepTime,
    uniqueMealCount: uniqueMeals
  };
};

// Function to scale meal plan ingredients based on user's target calories
const scaleMealPlan = (mealPlan: any, userCalories: number) => {
  console.log('üî• scaleMealPlan called with:', { userCalories, baseCal: mealPlan.base_calories });
  
  if (!mealPlan.base_calories || !userCalories) {
    console.log('‚ùå Scaling skipped - missing base_calories or userCalories');
    return mealPlan;
  }
  
  const scalingFactor = userCalories / mealPlan.base_calories;
  console.log('‚úÖ Scaling factor:', scalingFactor);
  
  // Clone the meal plan to avoid mutating original
  const scaledPlan = JSON.parse(JSON.stringify(mealPlan));
  
  // Update base calories and macro targets
  scaledPlan.base_calories = userCalories;
  if (scaledPlan.macro_targets) {
    scaledPlan.macro_targets.protein_g = Math.round(scaledPlan.macro_targets.protein_g * scalingFactor);
    scaledPlan.macro_targets.carbs_g = Math.round(scaledPlan.macro_targets.carbs_g * scalingFactor);
    scaledPlan.macro_targets.fat_g = Math.round(scaledPlan.macro_targets.fat_g * scalingFactor);
  }
  
  // Scale meal prep session ingredients
  if (scaledPlan.meal_prep_session?.prep_meals) {
    scaledPlan.meal_prep_session.prep_meals.forEach((meal: any) => {
      if (meal.ingredients) {
        meal.ingredients.forEach((ingredient: any) => {
          if (ingredient.scalable) {
            const originalAmount = parseFloat(ingredient.amount);
            const scaledAmount = originalAmount * scalingFactor;
            ingredient.amount = scaledAmount.toFixed(1);
          }
        });
      }
      // Scale meal prep meal calories and macros
      if (meal.calories) meal.calories = Math.round(meal.calories * scalingFactor);
      if (meal.macros) {
        meal.macros.protein = Math.round(meal.macros.protein * scalingFactor);
        meal.macros.carbs = Math.round(meal.macros.carbs * scalingFactor);
        meal.macros.fat = Math.round(meal.macros.fat * scalingFactor);
        if (meal.macros.fiber) meal.macros.fiber = Math.round(meal.macros.fiber * scalingFactor);
      }
    });
  }

  // Scale ingredients in meals
  if (scaledPlan.weeks) {
    scaledPlan.weeks.forEach((week: any) => {
      if (week.days) {
        week.days.forEach((day: any) => {
          if (day.meals) {
            day.meals.forEach((meal: any) => {
              if (meal.ingredients) {
                meal.ingredients.forEach((ingredient: any) => {
                  if (ingredient.scalable) {
                    const originalAmount = parseFloat(ingredient.amount);
                    const scaledAmount = originalAmount * scalingFactor;
                    ingredient.amount = scaledAmount.toFixed(1);
                  }
                });
              }
              // Scale meal calories and macros
              if (meal.calories) meal.calories = Math.round(meal.calories * scalingFactor);
              if (meal.macros) {
                meal.macros.protein = Math.round(meal.macros.protein * scalingFactor);
                meal.macros.carbs = Math.round(meal.macros.carbs * scalingFactor);
                meal.macros.fat = Math.round(meal.macros.fat * scalingFactor);
                if (meal.macros.fiber) meal.macros.fiber = Math.round(meal.macros.fiber * scalingFactor);
              }
            });
          }
          // Scale daily totals
          if (day.daily_totals) {
            day.daily_totals.calories = Math.round(day.daily_totals.calories * scalingFactor);
            day.daily_totals.protein = Math.round(day.daily_totals.protein * scalingFactor);
            day.daily_totals.carbs = Math.round(day.daily_totals.carbs * scalingFactor);
            day.daily_totals.fat = Math.round(day.daily_totals.fat * scalingFactor);
            if (day.daily_totals.fiber) day.daily_totals.fiber = Math.round(day.daily_totals.fiber * scalingFactor);
          }
        });
      }
    });
  }
  
  return scaledPlan;
};

